{
    "compilerOptions": {
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "isolatedModules": true,
      "jsx": "react",
      "lib": ["es6"],
      "moduleResolution": "node",
      "noEmit": true,
      "strict": true,
      "target": "esnext",
      "baseUrl": ".",
      "paths": {
        "*": ["src/*"],
        "@assets/*": ["src/assets/*"],
        "@contants/*": ["src/contants/*"],
        "@env/*": ["src/env/*"],
        "@screens/*": ["src/screens/*"],
        "@components/*": ["src/components/*"],
        "@models/*": ["src/models/*"],
        "@services/*": ["src/services/*"],
        "@mock/*": ["src/mock/*"],
        "@utils/*": ["src/utils/*"]
      }
    },
    "exclude": [
      "node_modules",
      "babel.config.js",
      "metro.config.js",
      "jest.config.js"
    ]
}